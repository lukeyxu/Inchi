          <div class="fa fa-phone"></div>
          <div><%= @classfied.phone %></div>
      </div> 
    </div>
    <div class="col s8 class-wapper class-height">
      <h3><%= @classfied.title %></h3>
      <p><%= @classfied.description %></p>
