<section class="lotsect">
<%= render 'nav' %>
<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Item Listing</h1>
  <div class="row">
    <% @lots.each do |lot| %>
      <div class="col s4 onelot">
        <div class="contentwrapper">
          <div class="imgwrapper">
  <!--           <%= image_tag lot.image.url(:large) %> -->
            <%= link_to image_tag(lot.image.url(:large)), lot %>
          </div>
          <div class="deswrapper">
            <i>Post by <%= lot.user.firstname %> at <%= lot.created_at.strftime('%F') %></i>
            <div class="lotlink"><%= link_to lot.title, lot %></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<br/>
<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lots.each do |lot| %>
      <tr>
        <td><%= lot.title %></td>
        <td><%= lot.description %></td>
        <td><%= lot.status %></td>
        <td><%= link_to 'Show', lot %></td>
        <td><%= link_to 'Edit', edit_lot_path(lot) %></td>
        <td><%= link_to 'Destroy', lot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New lot', new_lot_path %>

</div>
</section>